# Використовуємо Node.js версії 14 від офіційного образу Docker
FROM node:14

# Встановлюємо робочу директорію додатку в контейнері
WORKDIR /usr/src/app

# Копіюємо файли додатку у робочу директорію
COPY package*.json ./
COPY . .

# Встановлюємо залежності
RUN npm install

# Будуємо додаток
RUN npm run build

# Відкриваємо порт для доступу до додатку
EXPOSE 3000

# Запускаємо додаток
CMD [ "npm", "start" ]
